@model RentViewModel

<h2>Rent Car</h2>

<form asp-action="RentCar" asp-controller="Car" method="post">
    <div class="form-group">
        <label for="rentDate">Rent Date:</label>
        <input type="date" class="form-control" id="rentDate" min="@DateTime.Today.ToString("yyyy-MM-dd")" name="RentDate" required />
    </div>
    <div class="form-group">
        <label for="returnDate">Return Date:</label>
        <input type="date" class="form-control" id="returnDate" min="@DateTime.Today.ToString("yyyy-MM-dd")" name="ReturnDate" required />
    </div>
    <input type="hidden" name="CarId" value="@Model.CarId" />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
